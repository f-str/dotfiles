# auto move some window classes
# for_window [class="firefox"] move to workspace $ws2
#for_window [app_id="Google-chrome"] move to workspace $ws3
# for_window [app_id="^thunderbird$"] move workspace number $ws8,
# for_window [class="^Spotify$"] move workspace number $ws9,
for_window [app_id="^com.mitchellh.ghostty$"] blur enable, blue_xray disable,

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+s workspace number $ws1

bindsym $mod+2 workspace number $ws2
bindsym $mod+d workspace number $ws2

bindsym $mod+3 workspace number $ws3
bindsym $mod+y workspace number $ws3

bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5

bindsym $mod+6 workspace number $ws6
bindsym $mod+e workspace number $ws6

bindsym $mod+7 workspace number $ws7
bindsym $mod+v workspace number $ws7

bindsym $mod+8 workspace number $ws8

bindsym $mod+9 workspace number $ws9

bindsym $mod+0 workspace number $ws10
bindsym $mod+w workspace number $ws10

# move focused container to workspace
bindsym $mod+$alt+1 move container to workspace number $ws1
bindsym $mod+$alt+s move container to workspace number $ws1

bindsym $mod+$alt+2 move container to workspace number $ws2
bindsym $mod+$alt+d move container to workspace number $ws2

bindsym $mod+$alt+3 move container to workspace number $ws3
bindsym $mod+$alt+y move container to workspace number $ws3

bindsym $mod+$alt+4 move container to workspace number $ws4
bindsym $mod+$alt+5 move container to workspace number $ws5

bindsym $mod+$alt+6 move container to workspace number $ws6
bindsym $mod+$alt+e move container to workspace number $ws6

bindsym $mod+$alt+7 move container to workspace number $ws7
bindsym $mod+$alt+v move container to workspace number $ws7

bindsym $mod+$alt+8 move container to workspace number $ws8

bindsym $mod+$alt+9 move container to workspace number $ws9

bindsym $mod+$alt+0 move container to workspace number $ws10
bindsym $mod+$alt+w move container to workspace number $ws10


# resize window
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

